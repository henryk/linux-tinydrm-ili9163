/dts-v1/;
/plugin/;

#include <dt-bindings/gpio/gpio.h>

/ {
    compatible = "brcm,bcm2835";

    fragment@0 {
            target = <&spidev0>;
            __overlay__ {
                    status = "disabled";
            };
    };


    fragment@1 {
        target = <&spi0>;

            __overlay__ {
            #address-cells = <1>;
            #size-cells = <0>;
            status = "okay";

            cs-gpios = <&gpio 8 GPIO_ACTIVE_LOW>;
            num-chipselects = <1>;

            display@0 {
                compatible = "newhaven,1.8-128160EF", "ilitek,ili9163";
                reg = <0>;
                spi-max-frequency = <32000000>;
                dc-gpios = <&gpio 22 GPIO_ACTIVE_HIGH>;
                reset-gpios = <&gpio 25 GPIO_ACTIVE_LOW>;
                rotation = <180>;
                buswidth = <8>;
                spi-3wire;
            };
        };
    };
};
